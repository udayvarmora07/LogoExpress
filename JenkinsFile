pipeline {
    agent {}
    stages{
        stage("install dependencies"){
            steps{
                sh "npm install"
            }
        }
        stage("build"){
            steps{
                sh "npm run build"
            }
        }
        stage("nginx"){
            steps{
                sh '''
                    sudo mkdir -p /var/www/logo-express/
                    sudo cp -r dist/* /var/www/logo-express/
                '''
            }
        }
    }
}