pipeline {
    agent {}
    stages{
        stage("install dependencies"){
            steps{
                sh "npm install"
            }
        }
        stage("build"){
            steps{
                sh "npm run build"
            }
        }
        stage("nginx"){
            steps{
                sh "sudo mkdir -p /var/www/logo-express/"
                sh "sudo chmod 777 -R /var/www/logo-express/"
                sh "cp dist/* /var/www/html/"
            }
        }
    }
}